<?xml version="1.0"?>
<robot name="air_hockey_puck">
    <link name="puck">
        <visual>
            <geometry>
                <!-- Define the puck as a cylinder -->
                <cylinder radius="0.025" length="0.010"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>
        <collision>
            <geometry>
                <!-- Use the same cylinder geometry for collision -->
                <cylinder radius="0.025" length="0.010"/>
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0.01</mu>   <!-- Low friction for sliding -->
                        <mu2>0.01</mu2>
                    </ode>
                </friction>
                <bounce>
                    <restitution_coefficient>0.9</restitution_coefficient> <!-- High bounce for realistic collisions -->
                    <threshold>0.01</threshold>
                </bounce>
            </surface>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.170"/> <!-- Mass of the puck -->
            <inertia ixx="0.000028" ixy="0.0" ixz="0.0" iyy="0.000028" iyz="0.0" izz="0.0000045"/>
        </inertial>
    </link>

    <gazebo reference="puck">
        <material>Gazebo/Blue</material>
    </gazebo>
    
</robot>
